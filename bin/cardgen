#!/usr/bin/env node

var cardgen = require("../lib/cardgen");
var argv = require('minimist')(process.argv.slice(2));

var visa = require("../brands/visa");
var master = require("../brands/master-card");
var discover = require("../brands/discover");

cardgen.register(visa);
cardgen.register(master);
cardgen.register(discover);

var repeat = argv.r || argv.repeat || 1;

for (; repeat --> 0  ;) {

	var card = cardgen.generate();
	console.log(card.type, card.number);
}
